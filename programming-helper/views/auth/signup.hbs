<div class="signup-page">
  <div class="signup-banner"></div>

  <div id="signup" class="signup-inputs">
    <h3>Let-s decrease amount of the bugs together!</h3>
    <form class="signup-form" action="/signup" method="POST">
      <div>
        <label class="label" for="input-username">Username</label>
        <input type="text" id="input-username" name="username" placeholder="Your username" required />
      </div>
      <div>
        <label class="label" for="input-email">Email</label>
        <input type="email" id="input-email" name="email" placeholder="Your email" required />
      </div>
      <div>
        <label class="label" for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="********" minlength="8" required />
      </div>
      <button class="signup-finish" type="submit">Create an account</button>

      {{#if errorMessage}}
      <p>{{ errorMessage }}</p>
      {{/if}}
    </form>
    <a class="login-link" href="/login">Already have an account? Log in!</a>
    <div>
          <video class='funny-gif' width="320" height="240" autoplay>
      <source src="/images/signup-gif.mp4" type="video/mp4">

    </video>
    </div>

  </div>
</div>