<div class="login-page">
  <div class="signup-banner"></div>
  <div id="signup" class="signup-inputs">
    <form class="signup-form" action="/login" method="POST">
      <div>
        <label class="label" for="input-email">Email</label>
        <input type="email" id="input-email" name="email" placeholder="Your email" />
      </div>
      <div>
        <label class="label" for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="********" />
      </div>
      <button class="signup-finish" type="submit">Login</button>
      {{#if errorMessage}}
      <p>{{ errorMessage }}</p>
      {{/if}}
    </form>
        <div>
          <video class='funny-gif' width="320" height="240" autoplay>
      <source src="/images/signup-gif.mp4" type="video/mp4">

    </video>
    </div>

  </div>
</div>